{% extends 'post_frame.twig' %}

{% block main %}
<h1 style="display:none;">{{ BaseInfo.shop_name }}
			{% if subtitle is defined and subtitle is not empty %}
				/
				{{ subtitle }}
			{% elseif title is defined and title is not empty %}
				/
				{{ title }}
			{% endif %}
		</h1>
<section class="single_blog_area section-padding-80" >
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-sm-12 col-md-10">
                <div class="post-list">
                <div class="row no-gutters">
                    {% for postAndImage in lists %}  
                    <div class="single-blog-area wow fadeInUp" style="display: flex;" data-wow-delay="{{0.5 * (loop.index - 1)}}s">
                        <div class="blog-thumb">
                        <img src="{{postAndImage.image}}" alt="図">
                        </div>
                        <div class="blog-content">
                            <h5><a href="{{ url('post_detail', {'id': postAndImage.post.ID}) }}">{{postAndImage.post.post_title}}</a></h5>
                            <p class="author">www.office-soft.jp <span>| {{postAndImage.post.post_date}}</span></p>
                            <p class="abstract">{{postAndImage.abstract}}</p>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                </div>
                
                <nav aria-label="Page navigation">
                    <ul class="pagination" id="pagination"></ul>
                </nav>
            </div>
            <!-- ****** Blog Sidebar ****** -->
            <div class="col-12 col-lg-2 col-sm-12 col-md-2">
                <div class="blog-sidebar">
                    <!-- Single Widget Area -->
                    <div class="single-widget-area popular-post-widget" style="margin-top:40px;">
                        <!-- Single Popular Post -->
                        <div class="single-populer-post">
                            <img src="http://www.office-soft.jp/html/upload/save_image/0723221635_5d3708b395826.jpg">
                            <div class="post-contents">
                                <a href="{{ url('product_detail', {'id': 3}) }}" target="_blank">
                                    <h6> Microsoft Office 2019 Pro plus ダウンロード版|Windows PC2台用|</h6>
                                </a>
                                <a class="post-date" target="_blank" style="color:#e24747;font-size:16px" href="{{ url('product_detail', {'id': 3}) }}">￥10,000</a>
                            </div>
                        </div>
                        <!-- Single Popular Post -->
                        <div class="single-populer-post">
                            <img src="http://www.office-soft.jp/html/upload/save_image/0813185044_5d5287f447282.png">
                            <div class="post-contents">
                                <a href="{{ url('product_detail', {'id': 6}) }}" target="_blank">
                                    <h6>Microsoft Office 365 Home</h6>
                                </a>
                                <a class="post-date"  target="_blank"style="color:#e24747;font-size:16px" href="{{ url('product_detail', {'id': 6}) }}">￥9,400</a>
                            </div>
                        </div>
                        <!-- Single Popular Post -->
                        <div class="single-populer-post">
                            <img src="http://www.office-soft.jp/html/upload/save_image/0813175849_5d527bc93f32c.png">
                            <div class="post-contents">
                                <a href="{{ url('product_detail', {'id': 5}) }}" target="_blank">
                                    <h6>Microsoft Windows 10 Pro ダウンロード版(32 bit/64 bit 日本語版）</h6>
                                </a>
                                <a class="post-date" target="_blank" style="color:#e24747;font-size:16px" href="{{ url('product_detail', {'id': 5}) }}">￥8,100</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    $(function () {
        window.pagObj = $('#pagination').twbsPagination({
            totalPages: {{pageCount}},
            visiblePages: 3,
            startPage:{{index}},
            onPageClick: function (event, page) {
            // console.info(page + ' (from options)');
            // window.location.href='lists?size=10&index='+page;
            }
        }).on('page', function (event, page) {
            console.info(page + ' (from event listening)');
        window.location.href='lists?size=10&index='+page;
        });
    });
</script>

{% endblock %}

